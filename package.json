{
    "name": "next-enterprise",
    "description": "A production-ready Next.js boilerplate inspired by Blazityâ€™s next-enterprise",
    "version": "0.1.0",
    "author": "lyndon-baylin (https://github.com/lyndon-baylin)",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "start": "next start",
        "lint": "tsx scripts/checks.ts",
        "lint:fix": "eslint . \"**/*.{js,jsx,ts,tsx}\" --fix",
        "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
        "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "check:peers": "tsx scripts/check-peers.ts",
        "setup": "pnpm install --frozen-lockfile",
        "prepare": "husky",
        "postinstall": "npx patch-package -y"
    },
    "dependencies": {
        "geist": "^1.5.1",
        "next": "15.5.4",
        "react": "19.1.0",
        "react-dom": "19.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "20.0.0",
        "@commitlint/config-conventional": "20.0.0",
        "@eslint/eslintrc": "^3",
        "@next/eslint-plugin-next": "15.5.4",
        "@tailwindcss/postcss": "^4",
        "@total-typescript/ts-reset": "0.6.1",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/semver": "7.7.1",
        "@typescript-eslint/eslint-plugin": "8.44.1",
        "@typescript-eslint/parser": "8.44.1",
        "chalk": "5.6.2",
        "eslint": "^9",
        "eslint-config-next": "15.5.4",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-prettier": "5.5.4",
        "husky": "9.1.7",
        "lint-staged": "16.2.1",
        "patch-package": "8.0.0",
        "postcss": "8.5.6",
        "postcss-import": "16.1.1",
        "postinstall-postinstall": "2.1.0",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "0.6.14",
        "semver": "7.7.2",
        "stylelint": "16.24.0",
        "stylelint-config-standard": "39.0.0",
        "tailwindcss": "^4",
        "tsx": "4.20.6",
        "tw-animate-css": "1.4.0",
        "typed-query-selector": "2.12.0",
        "typescript": "^5",
        "typescript-eslint": "8.44.1"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "packageManager": "pnpm@10.17.1",
    "pnpm": {
        "overrides": {
            "glob": "^10.3.10",
            "inflight": "npm:@empty:0.0.0",
            "rimraf": "^5.0.5"
        }
    }
}
