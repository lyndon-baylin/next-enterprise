{
    "name": "next-enterprise",
    "description": "A production-ready Next.js boilerplate inspired by Blazityâ€™s next-enterprise",
    "version": "0.1.0",
    "author": "lyndon-baylin (https://github.com/lyndon-baylin)",
    "private": true,
    "scripts": {
        "dev": "cross-env FORCE_COLOR=1 next dev",
        "build": "next build",
        "start": "next start",
        "lint": "tsx scripts/lint.ts",
        "lint:fix": "tsx scripts/lint-fix.ts",
        "css:lint": "tsx scripts/css-lint.ts",
        "css:lint-fix": "tsx scripts/css-lint-fix.ts",
        "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
        "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "analyze": "cross-env ANALYZE=true pnpm run build --webpack",
        "check:bundle-sizes": "tsx scripts/check-bundle-sizes.ts",
        "check:peers": "tsx scripts/check-peers.ts",
        "setup": "pnpm install --frozen-lockfile",
        "test": "cross-env FORCE_COLOR=1 vitest",
        "test:watch": "cross-env FORCE_COLOR=1 vitest --watch",
        "test:ui": "cross-env FORCE_COLOR=1 vitest --ui",
        "test:coverage": "cross-env FORCE_COLOR=1 vitest --coverage",
        "test:storybook": "cross-env FORCE_COLOR=1 vitest --config vitest.storybook.config.ts",
        "e2e:headless": "playwright test",
        "e2e:ui": "playwright test --ui",
        "prepare": "husky",
        "postinstall": "pnpm dlx patch-package -y",
        "storybook": "cross-env FORCE_COLOR=1 storybook dev -p 6006",
        "build-storybook": "cross-env FORCE_COLOR=1 storybook build",
        "check-circular": "tsx scripts/check-circular.ts",
        "coupling-graph": "tsx scripts/coupling-graph.ts"
    },
    "dependencies": {
        "@fontsource-variable/geist": "5.2.8",
        "@fontsource-variable/geist-mono": "5.2.7",
        "@next/bundle-analyzer": "16.0.3",
        "@t3-oss/env-nextjs": "0.13.8",
        "class-variance-authority": "0.7.1",
        "clsx": "2.1.1",
        "next": "16.0.3",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "tailwind-merge": "3.4.0",
        "zod": "4.1.12"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "4.1.3",
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "@eslint/eslintrc": "^3.3.1",
        "@next/eslint-plugin-next": "16.0.4",
        "@playwright/test": "1.56.1",
        "@storybook/addon-a11y": "10.0.8",
        "@storybook/addon-docs": "10.0.8",
        "@storybook/addon-vitest": "10.0.8",
        "@storybook/nextjs-vite": "10.0.8",
        "@tailwindcss/postcss": "^4.1.17",
        "@testing-library/jest-dom": "6.9.1",
        "@testing-library/react": "16.3.0",
        "@testing-library/user-event": "14.6.1",
        "@total-typescript/ts-reset": "0.6.1",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/semver": "7.7.1",
        "@typescript-eslint/eslint-plugin": "8.48.0",
        "@typescript-eslint/parser": "8.48.0",
        "@vitejs/plugin-react": "5.1.1",
        "@vitest/browser": "3.2.4",
        "@vitest/coverage-v8": "3.2.4",
        "@vitest/ui": "3.2.4",
        "chalk": "5.6.2",
        "cross-env": "10.1.0",
        "eslint": "^9.39.1",
        "eslint-config-next": "16.0.4",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-storybook": "10.0.8",
        "eslint-plugin-unused-imports": "4.3.0",
        "gzip-size": "7.0.0",
        "husky": "9.1.7",
        "jsdom": "27.2.0",
        "lint-staged": "16.2.7",
        "madge": "8.0.0",
        "mkdirp": "3.0.1",
        "patch-package": "8.0.1",
        "playwright": "^1.56.1",
        "postcss": "8.5.6",
        "postcss-import": "16.1.1",
        "postinstall-postinstall": "2.1.0",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "0.7.1",
        "semver": "7.7.3",
        "storybook": "10.0.8",
        "stylelint": "16.26.0",
        "stylelint-config-standard": "39.0.1",
        "tailwindcss": "^4.1.17",
        "tsx": "4.20.6",
        "tw-animate-css": "1.4.0",
        "typed-query-selector": "2.12.0",
        "typescript": "^5",
        "typescript-eslint": "8.47.0",
        "vite-tsconfig-paths": "5.1.4",
        "vitest": "3.2.4",
        "webpack-bundle-analyzer": "5.0.1"
    },
    "engines": {
        "node": ">=24.11.1"
    },
    "packageManager": "pnpm@10.23.0",
    "pnpm": {
        "overrides": {
            "glob": "^13.0.0",
            "inflight": "npm:@empty:0.0.0",
            "rimraf": "^6.1.2"
        }
    }
}
